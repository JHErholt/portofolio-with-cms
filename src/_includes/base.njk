<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Jacob Erholt's online portfolio">
  <title>Jacob Erholt | {{title}}</title>

  {# Font awesome #}
  <script src="https://kit.fontawesome.com/e63c2db5f3.js" crossorigin="anonymous"></script>

  {# Font families #}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Spartan:wght@100;200;300;400;500;600;700;800;900&display=swap"
    rel="stylesheet">

  {# Style #}
  <link rel="stylesheet" href="../../css/style.css">

  {# CMS #}
  <script defer src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

</head>

<body>
  {% include "header.njk" %}
  <main>
    {{ content | safe }}
  </main>
  {% include "footer.njk" %}

  <script>
  // netlify security stuff
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>

  <script src="../../js/script.js"></script>
</body>
</html>
